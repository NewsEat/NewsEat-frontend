<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/selector_input"
        android:padding="20dp"
        android:layout_marginTop="55dp"
        android:elevation="0.5dp">

        <TextView
            android:id="@+id/title_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_email_hint1"
            android:textAppearance="@style/TextAppearance.NewsEat.Body1"
            android:textColor="@color/Gray800"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/user_info_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="newseat100@gmail.com"
            android:textAppearance="@style/TextAppearance.NewsEat.Body3"
            android:textColor="@color/Gray700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_email"
            app:layout_constraintBottom_toBottomOf="@id/title_email" />

        <TextView
            android:id="@+id/title_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_pw_title"
            android:textAppearance="@style/TextAppearance.NewsEat.Body1"
            android:textColor="@color/Gray800"
            app:layout_constraintTop_toBottomOf="@id/title_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/btn_pw_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_modify"
            android:textAppearance="@style/TextAppearance.NewsEat.Body3"
            android:textColor="@color/Gray700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_pw"
            app:layout_constraintBottom_toBottomOf="@id/title_pw" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>