<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/news_image"
        android:layout_width="118dp"
        android:layout_height="75dp"
        android:src="@drawable/dummy_gradient_background"
        android:background="@drawable/background_rounded_image"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="‘던파’ 흥행에 넥슨 네오플 평균 연봉 2.2억원…업계 1위-뉴스제목입니다 최대 두줄노출"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.NewsEat.Body2"
        android:textColor="@color/Gray800"
        app:layout_constraintTop_toTopOf="@id/news_image"
        app:layout_constraintStart_toEndOf="@id/news_image"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아시아경제"
        android:textAppearance="@style/TextAppearance.NewsEat.Body5"
        android:textColor="@color/Gray600"
        app:layout_constraintBottom_toBottomOf="@id/news_image"
        app:layout_constraintStart_toStartOf="@id/news_title"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/diver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="·"
        android:textAppearance="@style/TextAppearance.NewsEat.Body5"
        android:textColor="@color/Gray600"
        app:layout_constraintStart_toEndOf="@id/publisher"
        app:layout_constraintTop_toTopOf="@id/publisher"
        app:layout_constraintBottom_toBottomOf="@id/publisher"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025.05.20"
        android:textAppearance="@style/TextAppearance.NewsEat.Body5"
        android:textColor="@color/Gray600"
        app:layout_constraintTop_toTopOf="@id/publisher"
        app:layout_constraintStart_toEndOf="@id/diver"
        android:layout_marginStart="10dp" />
    
    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/news_image"
        app:layout_constraintStart_toStartOf="@id/news_image" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>