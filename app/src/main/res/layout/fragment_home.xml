<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/news_eat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news_eat_name"
        android:textAppearance="@style/TextAppearance.NewsEat.Title2"
        android:textColor="@color/Gray800"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="16dp" />
    
    <ImageView
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:src="@drawable/news_eat_logo"
        android:tint="@color/Gray800"
        app:layout_constraintStart_toEndOf="@id/news_eat_title"
        app:layout_constraintTop_toTopOf="@id/news_eat_title"
        app:layout_constraintBottom_toBottomOf="@id/news_eat_title"
        android:layout_marginLeft="6dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_news_detox"
        android:textAppearance="@style/TextAppearance.NewsEat.Body4"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/switch_detox_mode"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@id/news_eat_title"
        app:layout_constraintBottom_toBottomOf="@id/news_eat_title" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_detox_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/selector_thumb"
        app:track="@drawable/selector_switch"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/news_eat_title"
        app:layout_constraintBottom_toBottomOf="@id/news_eat_title"
        android:layout_marginRight="20dp" />

    <View
        android:id="@+id/diver"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray200"
        app:layout_constraintTop_toBottomOf="@id/news_eat_title"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/news_eat_home_banner"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="328:185"
        app:layout_constraintTop_toBottomOf="@id/diver"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp" />
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_news_recommended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/home_banner"
        android:layout_marginTop="24dp" />
    
    <View
        android:id="@+id/diver2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/Gray200"
        app:layout_constraintTop_toBottomOf="@id/rv_news_recommended"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/category_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_category_news_title"
        android:textAppearance="@style/TextAppearance.NewsEat.Title4"
        android:textColor="@color/Gray800"
        app:layout_constraintTop_toBottomOf="@id/diver2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/iv_category1"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:src="@drawable/category_science_unselected"
        android:background="@drawable/background_oval_primary600"
        android:padding="4dp"
        android:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/category_news_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_category1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT/과학"
        android:textAppearance="@style/TextAppearance.NewsEat.Title5"
        android:textColor="@color/Gray800"
        app:layout_constraintTop_toTopOf="@id/iv_category1"
        app:layout_constraintBottom_toBottomOf="@id/iv_category1"
        app:layout_constraintStart_toEndOf="@id/iv_category1"
        android:layout_marginLeft="14dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_news_category1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/iv_category1"
        android:layout_marginTop="12dp" />

    <View
        android:id="@+id/diver3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray200"
        app:layout_constraintTop_toBottomOf="@id/rv_news_category1"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/iv_category2"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:src="@drawable/category_culture_unselected"
        android:background="@drawable/background_oval_primary600"
        android:padding="4dp"
        android:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/diver3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_category2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생활/문화"
        android:textAppearance="@style/TextAppearance.NewsEat.Title5"
        android:textColor="@color/Gray800"
        app:layout_constraintTop_toTopOf="@id/iv_category2"
        app:layout_constraintBottom_toBottomOf="@id/iv_category2"
        app:layout_constraintStart_toEndOf="@id/iv_category2"
        android:layout_marginLeft="14dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_news_category2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/iv_category2"
        android:layout_marginTop="12dp" />

    <View
        android:id="@+id/diver4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray200"
        app:layout_constraintTop_toBottomOf="@id/rv_news_category2"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/iv_category3"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:src="@drawable/category_sports_unselected"
        android:background="@drawable/background_oval_primary600"
        android:padding="4dp"
        android:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/diver4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_category3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스포츠"
        android:textAppearance="@style/TextAppearance.NewsEat.Title5"
        android:textColor="@color/Gray800"
        app:layout_constraintTop_toTopOf="@id/iv_category3"
        app:layout_constraintBottom_toBottomOf="@id/iv_category3"
        app:layout_constraintStart_toEndOf="@id/iv_category3"
        android:layout_marginLeft="14dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_news_category3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/iv_category3"
        android:layout_marginTop="12dp" />

    <View
        android:id="@+id/diver5"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/Gray200"
        app:layout_constraintTop_toBottomOf="@id/rv_news_category3"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/positive_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_positive_news_title"
        android:textAppearance="@style/TextAppearance.NewsEat.Title4"
        android:textColor="@color/Gray800"
        app:layout_constraintTop_toBottomOf="@id/diver5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_news_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/positive_news_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>