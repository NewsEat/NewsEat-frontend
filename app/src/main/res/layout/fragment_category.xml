<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_category"
        android:textAppearance="@style/TextAppearance.NewsEat.Title2"
        android:textColor="@color/Gray800"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp" />
    
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/category_title"
        app:layout_constraintBottom_toBottomOf="@id/category_title"
        android:layout_marginEnd="25dp" />

    <View
        android:id="@+id/diver"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/rv_category"
        android:layout_marginTop="30dp"
        android:background="@color/Primary100" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category_title"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="25dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_news_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/diver"
        app:layout_constraintBottom_toTopOf="@id/btn_more_news"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="25dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_more_news"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_news_more_btn"
        android:text="@string/category_news_more"
        android:textAppearance="@style/TextAppearance.NewsEat.Body5"
        android:textColor="@color/Gray500"
        app:layout_constraintBottom_toBottomOf="parent" />
    
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>