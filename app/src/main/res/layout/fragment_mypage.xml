<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <data>-->
<!--        <variable-->
<!--            name="mypageviewModel"-->
<!--            type="com.example.news_eat_fronted.presentation.ui.mypage.MyPageViewModel" />-->
<!--    </data>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mypage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:text="@string/mypage_title"
            android:textAppearance="@style/TextAppearance.NewsEat.Title2"
            android:textColor="@color/Gray800"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <!-- 프로필 카드-->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="27dp"
            app:cardBackgroundColor="@color/Primary100_50percent"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/mypage_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/mypage_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_member_name"
                    android:textAppearance="@style/TextAppearance.NewsEat.Title6"
                    android:textColor="@color/Gray800"
                    app:layout_constraintTop_toTopOf="@id/mypage_nickname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/mypage_greeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.68dp"
                    android:text="@string/mypage_greeting"
                    android:textAppearance="@style/TextAppearance.NewsEat.Body7"
                    android:textColor="@color/Gray800"
                    app:layout_constraintTop_toBottomOf="@id/mypage_nickname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/btn_edit_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/mypage_edit_nickname"
                    android:textAppearance="@style/TextAppearance.NewsEat.Body9"
                    android:textColor="@color/Gray500"


                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 관심사 태그-->
                <LinearLayout
                    android:id="@+id/interest_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_greeting"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!-- 마이페이지 메뉴 리스트 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_menu_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/card_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 메뉴 1: 관심사 수정 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/menu_interest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/icon_interest"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_mypage_preference"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/text_interest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/mypage_menu_interest_title"
                    android:textAppearance="@style/TextAppearance.NewsEat.Body2"
                    android:textColor="@color/Gray800"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_interest"
                    app:layout_constraintEnd_toStartOf="@id/arrow_interest" />

                <ImageButton
                    android:id="@+id/arrow_interest"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_mypage_arrow"
                    android:background="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 메뉴 2: 회원정보 수정 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/menu_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@id/menu_interest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/icon_profile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_mypage_setting"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/text_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_menu_profile_title"
                    android:textAppearance="@style/TextAppearance.NewsEat.Body2"
                    android:textColor="@color/Gray800"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/icon_profile"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_profile" />

                <ImageButton
                    android:id="@+id/arrow_profile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_mypage_arrow"
                    android:background="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 메뉴 3: 로그아웃 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/menu_logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@id/menu_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/icon_logout"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_mypage_logout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/text_logout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_menu_logout_title"
                    android:textAppearance="@style/TextAppearance.NewsEat.Body2"
                    android:textColor="@color/Gray800"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/icon_logout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_logout" />

                <ImageButton
                    android:id="@+id/arrow_logout"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_mypage_arrow"
                    android:background="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 메뉴 4: 회원탈퇴 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/menu_withdraw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@id/menu_logout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/icon_withdraw"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_mypage_withdraw"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/text_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_menu_withdraw_title"
                    android:textAppearance="@style/TextAppearance.NewsEat.Body2"
                    android:textColor="@color/Gray800"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/icon_withdraw"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_withdraw" />

                <ImageButton
                    android:id="@+id/arrow_withdraw"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_mypage_arrow"
                    android:background="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>