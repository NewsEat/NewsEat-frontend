<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_culture"
        android:textAppearance="@style/TextAppearance.NewsEat.Title6"
        android:textColor="@color/Primary200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/category_indicator"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/Primary600"
        app:layout_constraintTop_toBottomOf="@id/category_name"
        app:layout_constraintStart_toStartOf="@id/category_name"
        app:layout_constraintEnd_toEndOf="@id/category_name"
        android:layout_marginTop="7dp" />
    
    <View
        android:layout_width="25dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toEndOf="@id/category_name"
        app:layout_constraintTop_toTopOf="@id/category_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>